@inject HttpClient Http

<h3>ProductList</h3>
<h1>Product list heheh2e</h1>


<ul class='list-unstyled'> 
    @foreach (var product in Products)
    {
        <li class='media my-3'>
            <div class='media-img-wrapper mr-2'>
                <a href='#'>
                    <img class='img-fluid' src="@product.ImageUrl" alt="@product.Name"/>

                </a>
            </div>
            <div class='media-body'>
                <a href='#'>
                  <h4 class='mb-0'>  @product.Name</h4>
                </a>
                <p>@product.Description</p>
                <h5 class='price'>@product.Price KM</h5>
            </div>
        </li>
    }
</ul>



@code {
    //https://localhost:7280/api/product

    private static List<Product> Products = new List<Product>();

    protected override async Task OnInitializedAsync()
    {
        var result = await Http.GetFromJsonAsync<List<Product>>("api/Product");
        if(result != null)
        {
            Products = result;
        }
    }

}
